---
import pages from "@/data/pages.json";
---

<footer class="w-full">
  <div class="flex flex-col items-center gap-4 px-8 text-center">
    <nav class="flex items-center gap-8">
      {
        pages.map(({ inFooter, name, url }) => {
          if (inFooter) {
            return (
              <a
                href={url}
                class="h-8 text-sm text-negroni-500 transition-colors delay-150 hover:text-[#FFA500]"
              >
                {name}
              </a>
            );
          }
        })
      }
    </nav>
    <div class="w-full border-t border-negroni-500/10 p-3">
      <span class="text-sm text-[#fd664e]"> Designed with love by Raz</span>
    </div>
  </div>
</footer>
