---
import { instagram } from '@/data/site.json';
import { Icon } from 'astro-icon';
import instagramIcon from '@/assets/icons/instagram.svg';
import galleryIcon from '@/assets/icons/gallery.svg';
---

<section class="py-16 sm:py-20">
  <div class="relative mx-auto max-w-7xl p-24 px-8 md:px-12 lg:px-36">
    <div class="mx-auto text-center">
      <h1 class="sm:text-5xl lg:text-6xl text-4xl font-medium tracking-tight text-caramel">
        EpoxyEdgeZZ
      </h1>
      <p class="text-primary-950/70 text-lg sm:text-xl">Irish Based Epoxy Table Craftman</p>
    </div>

    <div class="mt-10 flex flex-col justify-center gap-3 sm:flex-row">
      <a
        class="font-Helvetica border-negroni-600 bg-negroni-600
        text-charcoal-800 hover:border-negroni-500
        hover:text-negroni-500 focus-visible:outline-negroni-600 focus-visible:ring-negroni-500 inline-flex
        h-12 w-full items-center
        justify-center rounded-full border-2
        px-6
        py-3 text-center
        duration-200
        hover:bg-orange-500 focus:outline-none lg:w-auto"
        href={instagram}
        rel="noopener noreferrer"
        target="_blank"
      >
        <Icon name="fa:instagram" class="h-4 w-4" />
        <span>Instagram</span>
      </a>
      <a
        class="font-Helvetica border-negroni-600 bg-negroni-600
        text-charcoal-800 hover:border-negroni-500
        hover:text-negroni-500 focus-visible:outline-negroni-600 focus-visible:ring-negroni-500 inline-flex
        h-12 w-full items-center
        justify-center rounded-full border-2
        px-6
        py-3 text-center
        duration-200
        hover:bg-orange-500 focus:outline-none lg:w-auto"
        href="/gallery"
      >
        <span>See gallery</span>
      </a>
    </div>
  </div>
</section>
